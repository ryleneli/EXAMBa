<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/view_floatwindow"
    >
    <RelativeLayout
        android:id="@+id/menu_floatWindow"
        android:layout_centerInParent="true"
        android:layout_width="68dp"
        android:layout_height="68dp">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:id="@+id/iv_floatwindow"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/ic_pangxie"
            android:scaleType="centerCrop"
            />
        <Chronometer
            android:layout_marginTop="34dp"
            android:id="@+id/chronometer_floatwindow"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="7dp"
            android:textColor="#000000"
            ></Chronometer>
    </RelativeLayout>
    <ImageView
        android:id="@+id/purple1"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_centerInParent="true"
        android:src="@drawable/rounded_puple"
        android:visibility="gone"
        android:alpha="0"/>
    <ImageView
        android:id="@+id/purple2"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_centerInParent="true"
        android:src="@drawable/rounded_puple2"
        android:visibility="gone"
        android:alpha="0"/>
    <ImageView
        android:id="@+id/enter_test"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:background="@drawable/rounded_puple"
        android:src="@drawable/ic_close_black_24dp"
        android:alpha="0"
        />
    <ImageView
        android:id="@+id/exit_test"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:background="@drawable/rounded_puple"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:alpha="0"
        />
</RelativeLayout>
