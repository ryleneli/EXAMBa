<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/view_floatwindow"
    >
    <LinearLayout
        android:id="@+id/menu_floatWindow"
        android:layout_centerInParent="true"

        android:layout_width="50dp"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_button1">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:id="@+id/iv_floatwindow"
            android:layout_width="28dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@drawable/ic_library_books_black_24dp"
            android:scaleType="centerCrop"
            />
        <Chronometer
            android:id="@+id/chronometer_floatwindow"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:textSize="7dp"
            android:textColor="#ffffff"
            ></Chronometer>
    </LinearLayout>
    <TextView
        android:id="@+id/enter_test"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="ENTER"
        android:textSize="8dp"
        android:textColor="#000000"
        android:visibility="gone"
        android:background="@drawable/rounded_imagebutton"
        />
    <TextView
        android:id="@+id/exit_test"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="EXIT"
        android:textSize="8dp"
        android:textColor="#000000"
        android:visibility="gone"
        android:background="@drawable/rounded_imagebutton"
        />
</RelativeLayout>
