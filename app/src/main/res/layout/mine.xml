<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"><!--mine fragment-->
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTitleBar">

    </LinearLayout>-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_mine"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/mine_bg2"
        android:tooltipText="test">
        <TextView
            android:id="@+id/stu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="studentname"
            android:textSize="36dp"
            />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="#F5F5F5">
        <com.example.UI.ItemView
            android:id="@+id/mine_message"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:left_icon_drawable="@drawable/ic_message_black_24dp"
            app:left_text_text="消息通知"
            app:right_arrow_drawable="@drawable/ic_keyboard_arrow_right_black_24dp"/>
        <View
            android:id="@+id/view3"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#A9A9A9" />
        <com.example.UI.ItemView
            android:id="@+id/mine_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:left_icon_drawable="@drawable/ic_description_black_24dp"
            app:left_text_text="我的考试"
            app:right_arrow_drawable="@drawable/ic_keyboard_arrow_right_black_24dp"/>

        <com.example.UI.ItemView
            android:id="@+id/change_password"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:left_icon_drawable="@drawable/ic_settings_applications_black_24dp"
            app:left_text_text="修改密码"
            app:right_arrow_drawable="@drawable/ic_keyboard_arrow_right_black_24dp"/>
        <View
            android:id="@+id/view4"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#A9A9A9" />
        <com.example.UI.ItemView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:left_icon_drawable="@drawable/ic_info_black_24dp"
            app:left_text_text="关于"
            app:right_arrow_drawable="@drawable/ic_keyboard_arrow_right_black_24dp">
        </com.example.UI.ItemView>
        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/rounded_button"
            android:text="退出" />

    </LinearLayout>
</LinearLayout>
